        "@types/app-root-path": "^1.2.4",
        "@types/bcrypt": "^3.0.0",
        "@types/bluebird": "^3.5.29",
        "@types/debug": "^4.1.5",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.2",
        "@types/handlebars": "^4.1.0",
        "@types/lodash": "^4.14.149",
        "@types/moment": "^2.13.0",
        "@types/node": "^13.1.8",
        "@types/otplib": "^10.0.0",
