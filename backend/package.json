        "ts-node": "^8.6.2",
        "tsconfig": "^7.0.0",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.0",
        "tslint-etc": "^1.7.0",
        "typescript": "^3.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
