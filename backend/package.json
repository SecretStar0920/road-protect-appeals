        "body-parser": "^1.19.0",
        "chalk": "^2.4.2",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.10.2",
        "colors": "^1.4.0",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "exceljs": "^3.2.0",
        "express": "^4.17.1",
        "fs-extra": "^8.1.0",
        "got": "^11.7.0",
        "handlebars": "^4.5.3",
        "https": "^1.0.0",
        "lodash": "^4.17.15",
        "moment": "^2.24.0",
        "otplib": "^11.0.1",
