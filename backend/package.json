{
    "name": "road-protect-appeals-backend",
    "version": "1.6.0",
    "contributors": [
        "Code Oasis",
        "Entrostat"
    ],
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "npm run build && nodemon -max-old-space-size=4096",
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "postbuild": "./scripts/postbuild.sh",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "release": "standard-version --sign",
        "release:dry-run": "standard-version --dry-run",
        "start:prod": "DEBUG=appeals:* ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "DEBUG=appeals:* nodemon -max-old-space-size=4096",
        "database:dev:seed": "docker exec dev_backend_1 sh -c \"./cli database:seed\"",
        "script-runner": "ts-node -r tsconfig-paths/register",
        "cli": "npm run script-runner -- src/cli/cli.ts"
    },
    "repository": {
        "type": "git"
    },
    "dependencies": {
        "@google-cloud/logging-winston": "^3.0.6",
        "@nestjs/common": "^6.8.3",
